    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Mobile menu toggle
            const mobileMenuBtn = document.querySelector('.mobile-menu-btn');
            const nav = document.querySelector('nav ul');
            
            mobileMenuBtn.addEventListener('click', function() {
                nav.classList.toggle('active');
            });
            
            // FAQ accordion functionality
            const faqQuestions = document.querySelectorAll('.faq-question');
            faqQuestions.forEach(question => {
                question.addEventListener('click', function() {
                    const item = this.parentNode;
                    item.classList.toggle('active');
                });
            });
            
            // Smooth scrolling for anchor links
            document.querySelectorAll('a[href^="#"]').forEach(anchor => {
                anchor.addEventListener('click', function(e) {
                    e.preventDefault();
                    
                    const targetId = this.getAttribute('href');
                    if (targetId === '#') return;
                    
                    const targetElement = document.querySelector(targetId);
                    if (targetElement) {
                        const headerHeight = document.querySelector('header').offsetHeight;
                        const targetPosition = targetElement.getBoundingClientRect().top + window.pageYOffset - headerHeight;
                        
                        window.scrollTo({
                            top: targetPosition,
                            behavior: 'smooth'
                        });
                        
                        // Close mobile menu if open
                        nav.classList.remove('active');
                    }
                });
            });
            
            // Tool navigation
            const toolButtons = document.querySelectorAll('.use-tool-btn');
            const toolSections = document.querySelectorAll('.tool-container');
            const mainSections = document.querySelectorAll('section:not(.tool-container)');
            
            toolButtons.forEach(button => {
                button.addEventListener('click', function(e) {
                    e.preventDefault();
                    const targetId = this.getAttribute('href');
                    
                    // Hide all main sections
                    mainSections.forEach(section => {
                        section.style.display = 'none';
                    });
                    
                    // Hide all tool sections
                    toolSections.forEach(section => {
                        section.style.display = 'none';
                    });
                    
                    // Show the selected tool
                    document.querySelector(targetId).style.display = 'block';
                    
                    // Scroll to top
                    window.scrollTo({
                        top: 0,
                        behavior: 'smooth'
                    });
                });
            });
            
            // Back to tools buttons
            const backButtons = document.querySelectorAll('.back-to-tools');
            backButtons.forEach(button => {
                button.addEventListener('click', function() {
                    // Hide all tool sections
                    toolSections.forEach(section => {
                        section.style.display = 'none';
                    });
                    
                    // Show all main sections
                    mainSections.forEach(section => {
                        section.style.display = 'block';
                    });
                    
                    // Scroll to tools section
                    document.querySelector('#tools').scrollIntoView({
                        behavior: 'smooth'
                    });
                });
            });
            
            // Initialize AdMob ads
            initializeAds();
            
            // Image Resizer Tool Functionality
            const resizerFileInput = document.getElementById('resizer-fileInput');
            const resizerDropArea = document.getElementById('resizer-dropArea');
            const resizerPreviewImage = document.getElementById('resizer-previewImage');
            const resizerOriginalSize = document.getElementById('resizer-originalSize');
            const resizerNewSize = document.getElementById('resizer-newSize');
            const resizerFileSize = document.getElementById('resizer-fileSize');
            const resizerWidthInput = document.getElementById('resizer-width');
            const resizerHeightInput = document.getElementById('resizer-height');
            const resizerAspectCheckbox = document.getElementById('resizer-aspect');
            const resizerQualitySelect = document.getElementById('resizer-quality');
            const resizerFormatSelect = document.getElementById('resizer-format');
            const resizerResizeBtn = document.getElementById('resizer-resizeBtn');
            const resizerDownloadBtn = document.getElementById('resizer-downloadBtn');
            const resizerResetBtn = document.getElementById('resizer-resetBtn');
            
            let resizerOriginalImage = null;
            let resizerResizedImage = null;
            let resizerOriginalDimensions = { width: 0, height: 0 };
            
            // Handle drag and drop
            ['dragenter', 'dragover', 'dragleave', 'drop'].forEach(eventName => {
                resizerDropArea.addEventListener(eventName, preventDefaults, false);
            });
            
            function preventDefaults(e) {
                e.preventDefault();
                e.stopPropagation();
            }
            
            ['dragenter', 'dragover'].forEach(eventName => {
                resizerDropArea.addEventListener(eventName, highlight, false);
            });
            
            ['dragleave', 'drop'].forEach(eventName => {
                resizerDropArea.addEventListener(eventName, unhighlight, false);
            });
            
            function highlight() {
                resizerDropArea.classList.add('highlight');
            }
            
            function unhighlight() {
                resizerDropArea.classList.remove('highlight');
            }
            
            resizerDropArea.addEventListener('drop', handleDrop, false);
            
            function handleDrop(e) {
                const dt = e.dataTransfer;
                const files = dt.files;
                handleResizerFiles(files);
            }
            
            resizerFileInput.addEventListener('change', function() {
                handleResizerFiles(this.files);
            });
            
            function handleResizerFiles(files) {
                if (files.length > 0) {
                    const file = files[0];
                    if (file.type.match('image.*')) {
                        const reader = new FileReader();
                        
                        reader.onload = function(e) {
                            resizerOriginalImage = new Image();
                            resizerOriginalImage.onload = function() {
                                resizerOriginalDimensions.width = this.width;
                                resizerOriginalDimensions.height = this.height;
                                
                                resizerPreviewImage.src = e.target.result;
                                resizerOriginalSize.textContent = `${this.width}  ${this.height} px`;
                                resizerFileSize.textContent = formatFileSize(file.size);
                                
                                // Set default dimensions
                                resizerWidthInput.value = this.width;
                                resizerHeightInput.value = this.height;
                                
                                // Enable buttons
                                resizerResizeBtn.disabled = false;
                            };
                            resizerOriginalImage.src = e.target.result;
                        };
                        
                        reader.readAsDataURL(file);
                    } else {
                        alert('Please select an image file.');
                    }
                }
            }
            
            // Maintain aspect ratio
            let resizerAspectRatio = 1;
            
            resizerWidthInput.addEventListener('input', function() {
                if (resizerAspectCheckbox.checked && resizerOriginalImage) {
                    resizerAspectRatio = resizerOriginalDimensions.width / resizerOriginalDimensions.height;
                    resizerHeightInput.value = Math.round(this.value / resizerAspectRatio);
                }
            });
            
            resizerHeightInput.addEventListener('input', function() {
                if (resizerAspectCheckbox.checked && resizerOriginalImage) {
                    resizerAspectRatio = resizerOriginalDimensions.width / resizerOriginalDimensions.height;
                    resizerWidthInput.value = Math.round(this.value * resizerAspectRatio);
                }
            });
            
            resizerAspectCheckbox.addEventListener('change', function() {
                if (this.checked && resizerOriginalImage) {
                    resizerAspectRatio = resizerOriginalDimensions.width / resizerOriginalDimensions.height;
                    resizerHeightInput.value = Math.round(resizerWidthInput.value / resizerAspectRatio);
                }
            });
            
            // Resize image
            resizerResizeBtn.addEventListener('click', function() {
                if (!resizerOriginalImage) return;
                
                const width = resizerWidthInput.value ? parseInt(resizerWidthInput.value) : null;
                const height = resizerHeightInput.value ? parseInt(resizerHeightInput.value) : null;
                const quality = parseFloat(resizerQualitySelect.value);
                
                // Create canvas
                const canvas = document.createElement('canvas');
                const ctx = canvas.getContext('2d');
                
                // Calculate new dimensions maintaining aspect ratio if only one dimension is provided
                let newWidth, newHeight;
                
                if (width && height) {
                    newWidth = width;
                    newHeight = height;
                } else if (width) {
                    newWidth = width;
                    newHeight = Math.round((width / resizerOriginalDimensions.width) * resizerOriginalDimensions.height);
                    resizerHeightInput.value = newHeight;
                } else if (height) {
                    newHeight = height;
                    newWidth = Math.round((height / resizerOriginalDimensions.height) * resizerOriginalDimensions.width);
                    resizerWidthInput.value = newWidth;
                } else {
                    newWidth = resizerOriginalDimensions.width;
                    newHeight = resizerOriginalDimensions.height;
                }
                
                canvas.width = newWidth;
                canvas.height = newHeight;
                
                // Draw image on canvas
                ctx.drawImage(resizerOriginalImage, 0, 0, newWidth, newHeight);
                
                // Update preview
                resizerNewSize.textContent = `${newWidth}  ${newHeight} px`;
                
                // Get resized image data
                let mimeType = 'image/jpeg';
                if (resizerFormatSelect.value === 'png') {
                    mimeType = 'image/png';
                } else if (resizerFormatSelect.value === 'webp') {
                    mimeType = 'image/webp';
                } else {
                    // Use original format if available
                    const file = resizerFileInput.files[0];
                    if (file && file.type) {
                        mimeType = file.type;
                    }
                }
                
                canvas.toBlob(function(blob) {
                    resizerResizedImage = URL.createObjectURL(blob);
                    resizerFileSize.textContent = formatFileSize(blob.size);
                    resizerDownloadBtn.disabled = false;
                }, mimeType, quality);
            });
            
            // Download image
            resizerDownloadBtn.addEventListener('click', function() {
                if (!resizerResizedImage) return;
                
                // Show ad before download
                showInterstitialAdForDownload(() => {
                    const a = document.createElement('a');
                    a.href = resizerResizedImage;
                    
                    let extension = 'jpg';
                    if (resizerFormatSelect.value === 'png') {
                        extension = 'png';
                    } else if (resizerFormatSelect.value === 'webp') {
                        extension = 'webp';
                    } else {
                        const file = resizerFileInput.files[0];
                        if (file && file.name) {
                            const originalExt = file.name.split('.').pop().toLowerCase();
                            if (['jpeg', 'jpg', 'png', 'webp', 'gif'].includes(originalExt)) {
                                extension = originalExt;
                            }
                        }
                    }
                    
                    a.download = `resized-image.${extension}`;
                    document.body.appendChild(a);
                    a.click();
                    document.body.removeChild(a);
                });
            });
            
            // Reset tool
            resizerResetBtn.addEventListener('click', function() {
                resizerFileInput.value = '';
                resizerPreviewImage.src = 'data:image/svg+xml;base64,';
                resizerOriginalSize.textContent = '-';
                resizerNewSize.textContent = '-';
                resizerFileSize.textContent = '-';
                resizerWidthInput.value = '';
                resizerHeightInput.value = '';
                resizerResizeBtn.disabled = true;
                resizerDownloadBtn.disabled = true;
                resizerOriginalImage = null;
                resizerResizedImage = null;
            });
            
            // Image Compressor Tool Functionality
            const compressorFileInput = document.getElementById('compressor-fileInput');
            const compressorDropArea = document.getElementById('compressor-dropArea');
            const compressorPreviewImage = document.getElementById('compressor-previewImage');
            const compressorOriginalSize = document.getElementById('compressor-originalSize');
            const compressorNewSize = document.getElementById('compressor-newSize');
            const compressorReduction = document.getElementById('compressor-reduction');
            const compressorQualitySelect = document.getElementById('compressor-quality');
            const compressorFormatSelect = document.getElementById('compressor-format');
            const compressorMaxWidthInput = document.getElementById('compressor-maxWidth');
            const compressorMaxHeightInput = document.getElementById('compressor-maxHeight');
            const compressorCompressBtn = document.getElementById('compressor-compressBtn');
            const compressorDownloadBtn = document.getElementById('compressor-downloadBtn');
            const compressorResetBtn = document.getElementById('compressor-resetBtn');
            
            let compressorOriginalImage = null;
            let compressorCompressedImage = null;
            let compressorOriginalFileSize = 0;
            
            // Handle drag and drop for compressor
            ['dragenter', 'dragover', 'dragleave', 'drop'].forEach(eventName => {
                compressorDropArea.addEventListener(eventName, preventDefaults, false);
            });
            
            ['dragenter', 'dragover'].forEach(eventName => {
                compressorDropArea.addEventListener(eventName, highlight, false);
            });
            
            ['dragleave', 'drop'].forEach(eventName => {
                compressorDropArea.addEventListener(eventName, unhighlight, false);
            });
            
            compressorDropArea.addEventListener('drop', handleCompressorDrop, false);
            
            function handleCompressorDrop(e) {
                const dt = e.dataTransfer;
                const files = dt.files;
                handleCompressorFiles(files);
            }
            
            compressorFileInput.addEventListener('change', function() {
                handleCompressorFiles(this.files);
            });
            
            function handleCompressorFiles(files) {
                if (files.length > 0) {
                    const file = files[0];
                    if (file.type.match('image.*')) {
                        const reader = new FileReader();
                        
                        reader.onload = function(e) {
                            compressorOriginalImage = new Image();
                            compressorOriginalImage.onload = function() {
                                compressorPreviewImage.src = e.target.result;
                                compressorOriginalSize.textContent = formatFileSize(file.size);
                                compressorOriginalFileSize = file.size;
                                
                                // Set default dimensions
                                compressorMaxWidthInput.value = this.width;
                                compressorMaxHeightInput.value = this.height;
                                
                                // Enable buttons
                                compressorCompressBtn.disabled = false;
                            };
                            compressorOriginalImage.src = e.target.result;
                        };
                        
                        reader.readAsDataURL(file);
                    } else {
                        alert('Please select an image file.');
                    }
                }
            }
            
            // Compress image
            compressorCompressBtn.addEventListener('click', function() {
                if (!compressorOriginalImage) return;
                
                const quality = parseFloat(compressorQualitySelect.value);
                const maxWidth = compressorMaxWidthInput.value ? parseInt(compressorMaxWidthInput.value) : null;
                const maxHeight = compressorMaxHeightInput.value ? parseInt(compressorMaxHeightInput.value) : null;
                
                // Create canvas
                const canvas = document.createElement('canvas');
                const ctx = canvas.getContext('2d');
                
                // Calculate new dimensions maintaining aspect ratio
                let width = compressorOriginalImage.width;
                let height = compressorOriginalImage.height;
                
                if (maxWidth && maxHeight) {
                    const ratio = Math.min(maxWidth / width, maxHeight / height);
                    width = width * ratio;
                    height = height * ratio;
                } else if (maxWidth) {
                    const ratio = maxWidth / width;
                    width = maxWidth;
                    height = height * ratio;
                } else if (maxHeight) {
                    const ratio = maxHeight / height;
                    height = maxHeight;
                    width = width * ratio;
                }
                
                canvas.width = width;
                canvas.height = height;
                
                // Draw image on canvas
                ctx.drawImage(compressorOriginalImage, 0, 0, width, height);
                
                // Get compressed image data
                let mimeType = 'image/jpeg';
                if (compressorFormatSelect.value === 'png') {
                    mimeType = 'image/png';
                } else if (compressorFormatSelect.value === 'webp') {
                    mimeType = 'image/webp';
                }
                
                canvas.toBlob(function(blob) {
                    compressorCompressedImage = URL.createObjectURL(blob);
                    const newSize = blob.size;
                    compressorNewSize.textContent = formatFileSize(newSize);
                    
                    // Calculate reduction percentage
                    const reduction = ((compressorOriginalFileSize - newSize) / compressorOriginalFileSize * 100).toFixed(2);
                    compressorReduction.textContent = `${reduction}%`;
                    
                    compressorDownloadBtn.disabled = false;
                }, mimeType, quality);
            });
            
            // Download compressed image
            compressorDownloadBtn.addEventListener('click', function() {
                if (!compressorCompressedImage) return;
                
                // Show ad before download
                showInterstitialAdForDownload(() => {
                    const a = document.createElement('a');
                    a.href = compressorCompressedImage;
                    
                    let extension = 'jpg';
                    if (compressorFormatSelect.value === 'png') {
                        extension = 'png';
                    } else if (compressorFormatSelect.value === 'webp') {
                        extension = 'webp';
                    }
                    
                    a.download = `compressed-image.${extension}`;
                    document.body.appendChild(a);
                    a.click();
                    document.body.removeChild(a);
                });
            });
            
            // Reset compressor tool
            compressorResetBtn.addEventListener('click', function() {
                compressorFileInput.value = '';
                compressorPreviewImage.src = 'data:image/svg+xml;base64,';
                compressorOriginalSize.textContent = '-';
                compressorNewSize.textContent = '-';
                compressorReduction.textContent = '-';
                compressorMaxWidthInput.value = '';
                compressorMaxHeightInput.value = '';
                compressorCompressBtn.disabled = true;
                compressorDownloadBtn.disabled = true;
                compressorOriginalImage = null;
                compressorCompressedImage = null;
            });
            
            function formatFileSize(bytes) {
                if (bytes === 0) return '0 Bytes';
                const k = 1024;
                const sizes = ['Bytes', 'KB', 'MB', 'GB'];
                const i = Math.floor(Math.log(bytes) / Math.log(k));
                return parseFloat((bytes / Math.pow(k, i)).toFixed(2)) + ' ' + sizes[i];
            }
            
            function initializeAds() {
                // This function would initialize your AdMob ads
                // In a real implementation, you would use the AdMob SDK
                
                console.log('Initializing AdMob ads...');
                
                // For demonstration, we'll just log the ad events
                document.querySelectorAll('.btn').forEach(btn => {
                    if (btn.textContent.toLowerCase().includes('download') || 
                        btn.textContent.toLowerCase().includes('use tool')) {
                        btn.addEventListener('click', function(e) {
                            if (!this.href) return;
                            
                            e.preventDefault();
                            console.log('Showing ad before navigation...');
                            
                            // In a real app, you would show an interstitial ad here
                            // and then proceed after the ad is closed
                            showInterstitialAd(this.href);
                        });
                    }
                });
            }
            
            function showInterstitialAd(targetUrl) {
                // This would show an AdMob interstitial ad
                console.log('Showing interstitial ad...');
                
                // Simulate ad display with a timeout
                setTimeout(() => {
                    console.log('Ad completed, navigating to tool...');
                    window.location.href = targetUrl;
                }, 1000);
            }
            
            function showInterstitialAdForDownload(callback) {
                // In a real implementation, this would show an AdMob interstitial ad
                console.log('Showing ad before download...');
                
                // Simulate ad display with a timeout
                setTimeout(() => {
                    console.log('Ad completed, proceeding with download...');
                    if (callback) callback();
                }, 1000);
            }
        });
    </script>
</body>
</html>
