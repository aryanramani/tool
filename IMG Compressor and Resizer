                                <option value="png">PNG</option>
                            </select>
                        </div>
                        
                        <div class="option-group">
                            <label for="compressor-maxWidth">Max Width (px):</label>
                            <input type="number" id="compressor-maxWidth" placeholder="Original width">
                        </div>
                        
                        <div class="option-group">
                            <label for="compressor-maxHeight">Max Height (px):</label>
                            <input type="number" id="compressor-maxHeight" placeholder="Original height">
                        </div>
                    </div>
                    
                    <div class="tool-preview">
                        <div class="preview-container">
                            <img id="compressor-previewImage" src="data:image/svg+xml;base64," alt="Preview">
                            <div class="preview-info">
                                <p>Original Size: <span id="compressor-originalSize">-</span></p>
                                <p>Compressed Size: <span id="compressor-newSize">-</span></p>
                                <p>Reduction: <span id="compressor-reduction">-</span></p>
                            </div>
                        </div>
                        
                        <div class="tool-actions">
                            <button id="compressor-compressBtn" class="btn" disabled>Compress Image</button>
                            <button id="compressor-downloadBtn" class="btn" disabled>Download</button>
                            <button id="compressor-resetBtn" class="btn btn-outline">Reset</button>
                            <button class="btn btn-outline back-to-tools">Back to Tools</button>
                        </div>
